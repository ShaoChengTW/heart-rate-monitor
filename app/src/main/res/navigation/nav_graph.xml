<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/setupMonitorFragment">
    <fragment
        android:id="@+id/setupMonitorFragment"
        android:name="demo.idv.shao.heartratemonitor.SetupMonitorFragment">
        <action
            android:id="@+id/action_setupMonitorFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="demo.idv.shao.heartratemonitor.HomeFragment"/>
    <action
        android:id="@+id/exit"
        app:popUpTo="@id/setupMonitorFragment"
        app:popUpToInclusive="true" />
</navigation>